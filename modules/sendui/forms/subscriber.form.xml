<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1" allowAnyOrigin="true">

    <input ref="email" required="true" maxlength="150">
        <label>Adresse email</label>
    </input>

    <input ref="fullname" maxlength="50">
        <label>Nom complet</label>
    </input>

    <input ref="firstname" maxlength="50">
        <label>Prénom</label>
    </input>

    <input ref="lastname" maxlength="50">
        <label>Nom</label>
    </input>

    <input ref="phone" maxlength="50">
        <label>Téléphone fixe</label>
    </input>

    <input ref="mobile" maxlength="50">
        <label>Téléphone mobile</label>
    </input>

    <input ref="address" maxlength="250">
        <label>Adresse postale</label>
    </input>

    <input ref="zip" maxlength="15">
        <label>Code postal</label>
    </input>

    <input ref="country">
        <label>Pays</label>
    </input>

    <menulist ref="status">
        <label>Status</label>
        <item value="1">Actif</item>
        <item value="0">Inactif (suspendu)</item>
        <item value="2">A supprimer (rebond)</item>
        <item value="3">Supprimé</item>
    </menulist>

    <date ref="confirmed">
        <label>Inscription confirmée le</label>
    </date>

    <radiobuttons ref="html_format">
        <label>Format HTML</label>
        <item value="1">oui</item>
        <item value="0">non</item>
    </radiobuttons>

    <radiobuttons ref="text_format">
        <label>Format Texte</label>
        <item value="1">oui</item>
        <item value="0">non</item>
    </radiobuttons>

    <menulist ref="subscribe_from">
        <label>Provenance l'abonnement</label>
        <item value="interne">Interne</item>
        <item value="externe">Externe</item>
    </menulist>

</form>
