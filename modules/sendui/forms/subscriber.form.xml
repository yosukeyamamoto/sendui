<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1" allowAnyOrigin="true">

    <input ref="email" required="true" maxlength="150">
        <label>Email</label>
    </input>

    <input ref="fullname" maxlength="50">
        <label>Fullname</label>
    </input>

    <input ref="firstname" maxlength="50">
        <label>Firstname</label>
    </input>

    <input ref="lastname" maxlength="50">
        <label>Lastname</label>
    </input>

    <input ref="address" maxlength="250">
        <label>Address</label>
    </input>

    <input ref="zip" maxlength="15">
        <label>Zip</label>
    </input>

    <input ref="country">
        <label>Country</label>
    </input>

    <input ref="status" type="integer">
        <label>Status</label>
    </input>

    <input ref="confirmed" type="datetime">
        <label>Confirmed</label>
    </input>

    <input ref="html_format" type="integer">
        <label>Html Format</label>
    </input>

    <input ref="text_format" type="integer">
        <label>Text Format</label>
    </input>

    <input ref="subscribe_from" maxlength="50">
        <label>Subscribe From</label>
    </input>

    <input ref="date_update" type="datetime">
        <label>Date Update</label>
    </input>

    <input ref="date_insert" type="datetime">
        <label>Date Insert</label>
    </input>

</form>
