<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

    <input ref="username" required="true" maxlength="50">
        <label>Nom d'utilisateur</label>
    </input>

    <input ref="email" required="true" maxlength="150">
        <label>Email</label>
    </input>

    <input ref="lastname" maxlength="100">
        <label>Votre nom</label>
    </input>

    <input ref="firstname" maxlength="100">
        <label>Prénom</label>
    </input>

    <input ref="company" maxlength="100">
        <label>Société</label>
    </input>

    <input ref="address" maxlength="150">
        <label>Adresse</label>
    </input>

    <input ref="zip" maxlength="20">
        <label>Code postal</label>
    </input>

    <input ref="city" maxlength="150">
        <label>Ville</label>
    </input>

    <input ref="country">
        <label>Pays</label>
    </input>

    <submit ref="_submit">
        <label>Enregistrer</label>
    </submit>

</form>
