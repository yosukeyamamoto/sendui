<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

    <input ref="login" required="true" maxlength="50">
        <label>Nom d'utilisateur</label>
    </input>

    <input ref="password" required="true" maxlength="50">
        <label>Mot de passe</label>
    </input>

    <input ref="email" required="true" maxlength="150">
        <label>Email</label>
    </input>

    <input ref="lastname" maxlength="100">
        <label>Votre nom</label>
    </input>

    <input ref="firstname" maxlength="100">
        <label>Prénom</label>
    </input>

    <input ref="company" maxlength="100">
        <label>Société</label>
    </input>

    <input ref="address" maxlength="150">
        <label>Adresse</label>
    </input>

    <input ref="zip" maxlength="20">
        <label>Code postal</label>
    </input>

    <input ref="city" maxlength="150">
        <label>Ville</label>
    </input>

    <input ref="country">
        <label>Pays</label>
    </input>

    <input ref="batch_quota" required="true">
        <label>Nombre de mail par lot</label>
    </input>

    <input ref="pause_quota" required="true">
        <label>Secondes entre chaque lot</label>
    </input>

    <menulist ref="theme" required="true">
        <label>Thème pour l'interface</label>
        <item value="hot-sneaks">Thème par défaut</item>
        <item value="cupertino">Cupertino</item>
        <item value="excite-bike">Excite Bike</item>
        <item value="smoothness">Smoothness</item>
        <item value="south-street">South-street</item>
        <item value="start">Start</item>
        <item value="ui-lightness">UI Lightness</item>
    </menulist>

    <radiobuttons ref="is_admin">
        <label>Administrateur</label>
        <item value="1">oui</item>
        <item value="0">non</item>
    </radiobuttons>

    <radiobuttons ref="active">
        <label>Actif</label>
        <item value="1">oui</item>
        <item value="0">non</item>
    </radiobuttons>

    <submit ref="_submit">
        <label>Enregistrer</label>
    </submit>

</form>
